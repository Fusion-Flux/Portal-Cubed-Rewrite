{
  "model": {
    "type": "minecraft:select",
    "property": "minecraft:context_entity_type",
    "cases": [
      {
        "when": "minecraft:fox",
        "model": {
          "type": "minecraft:model",
          "model": "portalcubed:item/crowbar_in_hand"
        }
      },
      {
        "when": [
          "minecraft:villager",
          "minecraft:witch",
          "minecraft:wandering_trader"
        ],
        "model": {
          "type": "minecraft:model",
          "model": "portalcubed:item/crowbar_villager"
        }
      }
    ],
    "fallback": {
      "type": "minecraft:select",
      "cases": [
        {
          "model": {
            "type": "minecraft:model",
            "model": "portalcubed:item/crowbar"
          },
          "when": [
            "gui",
            "ground",
            "fixed"
          ]
        }
      ],
      "fallback": {
        "type": "minecraft:model",
        "model": "portalcubed:item/crowbar_in_hand"
      },
      "property": "minecraft:display_context"
    }
  }
}